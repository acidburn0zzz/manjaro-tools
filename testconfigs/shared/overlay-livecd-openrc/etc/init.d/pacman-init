description="Pacman initialization script"

depend() {
	use net
	need haveged
}

start() {
	ebegin "Running pacman initialization"
	/usr/bin/pacman-key --init &> /dev/null
	/usr/bin/pacman-key --populate archlinux manjaro &> /dev/null
	eend $?
}
